{
  "compilerOptions": {
    "target": "es5",                         
    "module": "commonjs",                    
    "lib": [ "es2015" ],                     
    "declaration": true,                   
    "sourceMap": true,                     
    "strict": true,                         
    "moduleResolution": "node",            
    "allowSyntheticDefaultImports": true,  
    "esModuleInterop": true,               
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,
    "noImplicitAny": false
  }
}